# enter number and devider
num = int(input('Please enter a number: ')) 
check = int(input('Please enter devider: '))
# check if multiple of 4
if num % 4 == 0:
    print('Number', num, 'is a multiple of 4')
    if num % 2 == 0:  # check if even
        print('Number ' + str(num) + ' is even')
else:
    print('Number', num, 'is an odd')
if num % check == 0:  # check if divisible
    print('Number', num, 'is divisible by', check)
else:
    print('Number', num, 'is not divisible', check)
